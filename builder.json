{
    "name": "aws-iot-device-sdk-java-v2",
    "packages": [
        "maven"
    ],
    "build_steps": [
        "mvn -B compile"
    ],
    "test_steps": [
        "mvn -B test",
        "python3 -m pip install boto3",
        "python3 deviceadvisor/script/run.py"
    ],
    "imports": [
        "JDK8"
    ],
    "env": {
        "DA_TOPIC": "test/da",
        "DA_SHADOW_PROPERTY": "datest",
        "DA_SHADOW_VALUE_SET": "ON",
        "DA_SHADOW_VALUE_DEFAULT": "OFF"
    },
    "hosts": {
        "ubuntu": {
            "packages": [
                "openjdk-8-jdk-headless"
            ]
        },
        "debian": {
            "packages": [
                "openjdk-8-jdk-headless"
            ]
        }
    }
}
